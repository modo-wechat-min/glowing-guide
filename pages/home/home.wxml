<wxs module="filters" src="../../filters/filters.wxs"></wxs>
<view class="floor1 ">
  <swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}" >
    <block wx:for="{{imgArrayActivity}}" wx:for-index="index" wx:key="index" wx:for-item="item" class="relative">
      <swiper-item bindtap='activityNextFn' data-index='{{index}}'> 
        <image  src="{{item.ImageUrl[0]}}" class="slide-image" /> 
        <image class='sub-img' src="{{item.ImageUrl[1]}}" wx:if="{{item.ImageUrl[1]}}"></image>
      </swiper-item>
    </block>
  </swiper>
  <!-- <image class="homeImageUrl" src="{{homeImageUrl}}" mode="cover"></image> -->
